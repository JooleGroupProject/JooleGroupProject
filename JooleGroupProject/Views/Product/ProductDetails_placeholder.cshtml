@model JooleGroupProject.Models.ProductViewModel
@using JooleGroupProject.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <title>ProductDetails</title>
    <link rel="stylesheet" href="~/Content/Product/ProductDetail.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div id="MenuContainer">
            <div id="Menu">
                <a>@Html.ActionLink("Product Summary", "ProductSummary")</a>
                <a>@Html.ActionLink("Product Detail", "ProductDetail")</a>
                <a>Product Decumentation</a>
                <a>Contact</a>
            </div>
        </div>
        <div class="row">
            <div id="Title">
                <h2>Product Summary</h2>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <table>
                        <tr>
                            Description
                        </tr>
                        <tr>
                            <td class="propertyName">Manufacture Id</td>
                            <td class="tableRow">@Model.Product.Manufacturer_ID</td>
                        </tr>
                        <tr>
                            <td class="propertyName">Series</td>
                            <td class="tableRow">@Model.Product.Series</td>
                        </tr>
                        <tr>
                            <td class="propertyName">Model</td>
                            <td class="tableRow">@Model.Product.Model</td>
                        </tr>
                    </table>
                    <table>
                        <tr>
                            <th>
                                Type
                            </th>
                        </tr>
                        @foreach (KeyValuePair<string, string> prop in Model.TypeProps)
                        {
                        <tr>
                            <td class="propertyName">@prop.Key</td>
                            <td class="tableRow">@prop.Value</td>
                        </tr>
                        }
                    </table>
                </div>
                <div class="col-sm-6">
                    <table>
                        <tr>
                            <th>
                                Tech Specs
                            </th>
                        </tr>
                        @foreach (KeyValuePair<string, string> prop in Model.TechSpecsProps)
                        {
                        <tr class="tableRow">
                            <td class="propertyName">@prop.Key</td>
                            <td>@prop.Value</td>
                        </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
