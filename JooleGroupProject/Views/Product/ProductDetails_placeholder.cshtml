@model JooleGroupProject.Models.ProductViewModel
@using JooleGroupProject.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <title>ProductDetails</title>
    <link rel="stylesheet" href="~/Content/Product/ProductDetail.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body class="detailTopColor">
    <div class="container">
        <div class="imagePlace"><img src="~/Images/JooleLogo.png" width="120" height="60" /></div>
        <div id="MenuContainer">
            <div id="Menu">
                <a>@Html.ActionLink("Product Summary", "ProductSummary")</a>
                <a>@Html.ActionLink("Product Detail", "ProductDetail")</a>
                <a href="#">Product Decumentation</a>
                <a href="#">Contact</a>
            </div>
        </div>

        <div >
            
                <h2 id="Title">Product Summary</h2>
                <p id="TableLine"></p>
            <br />

            

            <div>
                <div>
                    <div id="DescriptionDIV">
                        <h5>Description</h5>
                        <table>
                            <tr>
                                <th id="TableHeader">Manufacture Id</th>
                                <td id="tableRow">@Model.Product.Manufacturer_ID</td>

                            </tr>

                            <tr>
                                <th id="TableHeader">Series</th>
                                <td id="tableRow">@Model.Product.Series_Info</td>
                            </tr>
                            <tr>
                                <th id="TableHeader">Model</th>
                                <td id="tableRow">@Model.Product.Model</td>
                            </tr>


                        </table>



                    </div>
                    
                    <div id="TypeDIV">
                        <p id="TableLine"></p>
                        <br />
                        <h5>TYPE</h5>
                        <table>
                            @foreach (KeyValuePair<string, string> prop in Model.TypeProps)
                            {
                                <tr>
                                    <th id="TableHeader">@prop.Key</th>
                                    <td id="tableRow">@prop.Value</td>
                                </tr>
                            }

                        </table>

                    </div>

                    

                </div>


                <div id="TechDIV">
                    <p id="TableLine"></p>
                    <br />
                    <h5>TECHNICAL SPECIFICATIONS</h5>
                    <table>
                        @foreach (KeyValuePair<string, string> prop in Model.TechSpecsProps)
                        {
                            <tr>
                                <th id="TechTableHeader">@prop.Key</th>
                                <td id="tableRow">@prop.Value</td>
                            </tr>
                        }
                    </table>
                </div>


                
            </div>
        </div>
    </div>
</body>
</html>
