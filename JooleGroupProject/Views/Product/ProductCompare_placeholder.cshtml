@model JooleGroupProject.Models.JooleModel
@using JooleGroupProject.Data;
@using JooleGroupProject.Models;



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <table class="table">
        <tr>
            <td>DESCRIPTION</td>
        </tr>
        <tr>
            <td>Manufacturer</td>
            @foreach (ProductViewModel product in Model.LProduct)
            {
                <td>@product.Product.Manufacturer_ID</td>
            }
        </tr>
        <tr>
            <td>Series</td>
            @foreach (ProductViewModel product in Model.LProduct)
            {
                <td>@product.Product.Series</td>
            }
        </tr>
        <tr>
            <td>Model</td>
            @foreach (ProductViewModel product in Model.LProduct)
            {
                <td>@product.Product.Model</td>

            }
        </tr>
        <tr>
            <td>TYPE</td>
        </tr>
        @foreach (string propName in @Model.LProduct[0].TypeProps.Keys)
        {
            <tr>
                <td>@propName</td>
                @foreach (ProductViewModel product in Model.LProduct)
                {
                    <td>@product.TypeProps[@propName]</td>
                }
            </tr>
        }
        <tr>
            <td>TECHNICAL SPECIFIC</td>
        </tr>
        @foreach (string propName in @Model.LProduct[0].TechSpecsProps.Keys)
        {
            <tr>
                <td>@propName</td>
                @foreach (ProductViewModel product in Model.LProduct)
                {
                    <td>@product.TechSpecsProps[@propName]</td>
                }
            </tr>
        }
    </table>
</body>
</html>
